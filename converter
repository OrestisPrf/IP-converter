#include<stdio.h>
#include<math.h>
#include<stdlib.h>

void logo()
{
printf(".*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*\n");
printf("*                                         *\n");
printf("<                                         >\n");
printf("       IP     -    CONVERTER               \n");
printf("<        created by Prof-IT               >\n");
printf("*                                         *\n");
printf(".*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*.*\n\n");
}
void dec_to_bin( int n)
{
    int num[32] , i , j ;
      for ( i = 0 ; n > 0 ; i ++)
         {
            num[i] = n % 2 ;
              n  /= 2 ;
         }
            for ( j = i - 1 ; j >= 0 ; j --)
              {
                  printf("%d",num[j]);
              }
}

                       void bin_to_dec( int n)
                      {
                          int dec = 0 , i , tem ;
                             for ( i = 0 ; n > 0 ; i ++)
                                  {
                                       tem = n % 10 ;
                                          n = n / 10 ;
                                              dec += tem * pow( 2 , i);
                                  }
                                                 printf("%d",dec);
                        }

                                                              int main()
                                                              {
                                                                  logo();
                                                                    int choice ;
                                                     printf("Enter 1 to convert from decimal to binary\n ");
                                              printf("Enter 2 to conver from binary to decimal\n ");
                                                             scanf("%d",&choice);
                                                            switch(choice)
                                                            { case 1:
                                                        {
                                                      int ip[4] , i ;
                                       printf("Give an ip address (in decimal) : ");
                                scanf("%d.%d.%d.%d",&ip[0],&ip[1],&ip[2],&ip[3]);
                            printf("The binary ip is : ");
                        for ( i = 0 ; i < 4 ; i ++)
                   {
                dec_to_bin( ip[i] );
             if ( i < 3)
        printf(".");
                                                                 }
    break  ;          
} 
 case 2:
{    int ip[4] , i ;
           printf("Give an ip address(in binary ) :");
                   scanf("%d.%d.%d.%d",&ip[0],&ip[1],&ip[2],&ip[3]);
                          printf("The decimal ip is : ");
                              for ( i = 0 ; i < 4 ; i ++)
                                   {
                                      bin_to_dec(ip[i]);
                                           if ( i < 3 )
                                              printf(".");
                                    }
    break ;         
}
 default:
      printf("Invalid choice . \n");
}
  return 0 ;
}
